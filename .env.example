# API configuration
VORTEX_API_BASE_URL=http://localhost:8000/agent
VORTEX_API_KEY=
VORTEX_REQUEST_TIMEOUT=25
VORTEX_SYSTEM_PROMPT=You are Vortex, a concise and helpful on-device assistant.
VORTEX_CONVERSATION_ID=portable_device_001
VORTEX_DEBUG=false

# Wake/STT/TTS mode
VORTEX_MODE=audio
VORTEX_WAKE_WORD=hey vortex
VORTEX_LANGUAGE=en

# STT/TTS modes: "local", "remote", or "wyoming"
VORTEX_STT_MODE=wyoming
VORTEX_TTS_MODE=wyoming

# Wyoming service connection (used when STT_MODE=wyoming or TTS_MODE=wyoming)
VORTEX_WHISPER_HOST=localhost
VORTEX_WHISPER_PORT=10300
VORTEX_PIPER_HOST=localhost
VORTEX_PIPER_PORT=10200

# Remote service URLs (used when STT_MODE=remote or TTS_MODE=remote)
# VORTEX_WHISPER_URL=http://localhost:9000
# VORTEX_PIPER_URL=http://localhost:5000

# Local audio mode settings (used when modes are "local")
VORTEX_WHISPER_MODEL=tiny
VORTEX_WHISPER_DEVICE=cpu
VORTEX_RECORD_SECONDS=20
VORTEX_PIPER_MODEL=
VORTEX_PIPER_BINARY=
VORTEX_PIPER_SPEAKER=

VORTEX_WAKE_MODEL=./models/hey_vortex.onnx